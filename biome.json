{
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "error"
            },
            "style": {
                "useConst": "error"
            },
            "correctness": {
                "noUnusedVariables": {
                    "level": "error",
                    "options": {
                        "ignoreRestSiblings": true
                    }
                }
            }
        }
    },
    "files": {
        "includes": ["src/**/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "none"
        }
    }
}
